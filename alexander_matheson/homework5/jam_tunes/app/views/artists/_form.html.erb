<div class="col-md-6 col-md-offset-2">
<h1 style="color:#cc3333;">Create New Artist</h1>

<div class="well">
<%= simple_form_for(@artist, html: {:class => 'form-horizontal'} ) do |f| %>

<%= f.input :name, label: false, input_html: {:class => 'form-control', placeholder: 'Name', } %>

<br/>

<%= f.input :pic_url, label: false, input_html: {:class => 'form-control', placeholder: 'Artist Picture URL'} %>
<br/>

<div style="text-align:center;">
<%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-default' %>
</div>

	<% end %>


</div>
</div>
