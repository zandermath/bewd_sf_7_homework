<div class="col-md-6 col-md-offset-3">

	<%= simple_form_for(@record_label, html: {:class => 'form-horizontal'} ) do |f| %>

<div class="well">
	<%= f.input :name, label: false, input_html: {:class => 'form-control', placeholder: 'Name', } %>

	<br/>
	
	<div style="text-align:center;">
	<%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-default' %>
	</div>
	</div>

	<% end %>

</div>