
<div style="text-align:center">
	<%= simple_form_for(@trip, html: {:class => 'form-horizontal'} ) do |f| %>

<div class="well">
	<%= f.input :description, label: false, input_html: {:class => 'form-control', placeholder: 'Description', } %>

	<br/>
	<div class="dropdown">
		<%= f.association :location_start, label: 'Start Location', input_html: {:class => 'form-control', placeholder: 'Record Label'} %>
	</div>

	<br/>
	<div class="dropdown">
		<%= f.association :location_end, label: 'Destination', input_html: {:class => 'form-control', placeholder: 'Genre'} %>
	</div>
	<br/>
	
	<div style="text-align:center;">
	<%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-default' %>
	</div>
	</div>

	<% end %>
</div>
