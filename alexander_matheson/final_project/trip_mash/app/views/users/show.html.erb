<div class="container-fluid">
    <div class="row user-menu-container square">
        <div class="col-md-7 user-details">
            <div class="row coralbg black">
                <div class="col-md-4 no-pad">
                    	<div class="user-image">
                        <span><%= attachment_image_tag(@user, :image, :fill, 200, 200, fallback: "default_profile_image.png") %></span>
                    	</div>
                    <div class="user-pad">
                        <h3><%= @user.first_name %></h3>
                        <h4 class="black"><i class="fa fa-map-marker"></i> <%= @user.home_town %></h4>
                        <h4 class="black"><i class="fa fa-instagram"></i> CoolesOCool</h4>
                        <h4 class="black">
                         <span class="fa fa-pencil"></span>
                        <%= link_to "Edit Profile", edit_user_registration_path, :class => "black" %>
                        </h4>
                    </div>
                </div>
                <div class="col-md-8 no-pad">
                    <div class="user-description">
                    <div class="row">
                    	<h4 class="black"><i class="fa fa-map-marker fa-2x"></i><%= @user.current_location %></h4>
                        <h3>About</h3>
                    </div>
                        <%= @user.description %>
                    </div>
                    <h3><i class="fa fa-user"></i><%= render 'follow_form' if user_signed_in? %></h3>
                </div>
            </div>
            <div class="row overview">
                <div class="col-md-3 user-pad text-center">
                    <i class="fa fa-users fa-3x"></i>
                    <span class="stats"><%= render 'users/followers' %></span>
                </div>
                <div class="col-md-3 user-pad text-center">
                    <i class="fa fa-user fa-3x"></i>
                    <span class="stats"><%= render 'users/following' %></span>
                </div>
                <div class="col-md-3 user-pad text-center">
                    <i class="fa fa-bus fa-3x"></i>
                    <span class="stats"><%= render 'users/trips_stat' %></span>
                </div>
                <div class="col-md-3 user-pad text-center">
                    <%= link_to "Post a Trip", new_trip_path, :class => "btn btn-hero btn-lg", 'data-no-turbolink' => true %>
                </div>
            </div>
        </div>
        <% if @user == current_user %>
        <div class="col-md-4 user-menu user-pad">
            <div class="user-menu-content active">
                <h3>
                    Following
                </h3>
                <ul class="user-menu-list">
                    <li>
                        <h4><i class="fa fa-user coral"></i><%= render 'show_following' %></h4>
                    </li>
                </ul>
            </div>
            <div class="user-menu-content">
                <h3>
                    Your Inbox
                </h3>
                <ul class="user-menu-list">
                    <li>
                        <h4>From Roselyn Smith <small class="coral"><strong>NEW</strong> <i class="fa fa-clock-o"></i> 7:42 A.M.</small></h4>
                    </li>
                    <li>
                        <h4>From Jonathan Hawkins <small class="coral"><i class="fa fa-clock-o"></i> 10:42 A.M.</small></h4>
                    </li>
                    <li>
                        <h4>From Georgia Jennings <small class="coral"><i class="fa fa-clock-o"></i> 10:42 A.M.</small></h4>
                    </li>
                    <li>
                        <button type="button" class="btn btn-labeled btn-danger" href="#">
                            <span class="btn-label"><i class="fa fa-envelope-o"></i></span>View All Messages</button>
                    </li>
                </ul>
            </div>
            <div class="user-menu-content">
                <h3>
                    Trending
                </h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="view">
                            <div class="caption">
                                <p>47LabsDesign</p>
                                <a href="" rel="tooltip" title="Appreciate"><span class="fa fa-heart-o fa-2x"></span></a>
                                <a href="" rel="tooltip" title="View"><span class="fa fa-search fa-2x"></span></a>
                            </div>
                            <img src="http://24.media.tumblr.com/273167b30c7af4437dcf14ed894b0768/tumblr_n5waxesawa1st5lhmo1_1280.jpg" class="img-responsive">
                        </div>
                        <div class="info">
                            <p class="small" style="text-overflow: ellipsis">An Awesome Title</p>
                            <p class="small coral text-right"><i class="fa fa-clock-o"></i> Posted Today | 10:42 A.M.</small>
                        </div>
                        <div class="stats turqbg">
                            <span class="fa fa-heart-o"> <strong>47</strong></span>
                            <span class="fa fa-eye pull-right"> <strong>137</strong></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="view">
                            <div class="caption">
                                <p>47LabsDesign</p>
                                <a href="" rel="tooltip" title="Appreciate"><span class="fa fa-heart-o fa-2x"></span></a>
                                <a href="" rel="tooltip" title="View"><span class="fa fa-search fa-2x"></span></a>
                            </div>
                            <img src="http://24.media.tumblr.com/282fadab7d782edce9debf3872c00ef1/tumblr_n3tswomqPS1st5lhmo1_1280.jpg" class="img-responsive">
                        </div>
                        <div class="info">
                            <p class="small" style="text-overflow: ellipsis">An Awesome Title</p>
                            <p class="small coral text-right"><i class="fa fa-clock-o"></i> Posted Today | 10:42 A.M.</small>
                        </div>
                        <div class="stats turqbg">
                            <span class="fa fa-heart-o"> <strong>47</strong></span>
                            <span class="fa fa-eye pull-right"> <strong>137</strong></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="user-menu-content">
                <h2 class="text-center">
                    START SHARING
                </h2>
                <center><i class="fa fa-cloud-upload fa-4x"></i></center>
                <div class="share-links">
                    <center><button type="button" class="btn btn-lg btn-labeled btn-success" href="#" style="margin-bottom: 15px;">
                            <span class="btn-label"><i class="fa fa-bell-o"></i></span>A FINISHED PROJECT
                    </button></center>
                    <center><button type="button" class="btn btn-lg btn-labeled btn-warning" href="#">
                            <span class="btn-label"><i class="fa fa-bell-o"></i></span>A WORK IN PROGRESS
                    </button></center>
                </div>
            </div>
        </div>
        <div class="col-md-1 user-menu-btns">
            <div class="btn-group-vertical square" id="responsive">
                <a href="#" class="btn btn-block btn-default active">
                  <i class="fa fa-user fa-3x"></i>
                </a>
                <a href="#" class="btn btn-default">
                  <i class="fa fa-users fa-3x"></i>
                </a>
                <a href="#" class="btn btn-default">
                  <i class="fa fa-envelope-o fa-3x"></i>
                </a>
                <a href="#" class="btn btn-default">
                  <i class="fa fa-fire fa-3x"></i>
                </a>
            </div>
        </div>
    </div>
    <% if current_user.admin? %>
	<div class="col-md-3 white">
	<h3>Admin Tasks</h3>
	<ul class="user-menu-list">
		<li class="list-group"><%= link_to "Add Activity", new_activity_path, :class => "white" %></li>
		<li class="list-group"><%= link_to "Add Destination", new_location_end_path, :class => "white" %></li>
		<li class="list-group"><%= link_to "Add Region", new_region_path, :class => "white" %></li>
	</ul>
	</div>
    <% end %>
<% else %>
    <div>
    <h1>Following</h1>
    <%= render 'show_following' %>
    </div>

    <div>
    <h1>Follower</h1>
    <%= render 'show_followers' %>
    </div>

<% end %>
</div>

